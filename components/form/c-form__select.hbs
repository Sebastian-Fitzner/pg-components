<div class="form__select-wrapper">
	{{#is wrapper true}}
		<div class="form__col-left is-middle">
	{{/is}}
	<label for="{{ id }}">
		{{ label }} {{#or required validate-me}}<abbr title="Required">*</abbr>{{/or}}
	</label>
	{{#is wrapper true}}
		</div>
		<div class="form__col-right">
	{{/is}}
	<select id="{{ id }}" class="{{ class }}" name="{{ id }}"

	{{#each data-attribute}}
		{{data-attribute}}="{{data-attribute-value}}"
	{{/each}}

	{{#is required "required"}}required="required"{{/is}}{{#if select-js-options}} data-js-options='{{select-js-options}}'{{/if}}>
	{{#each option}}
		<option value="{{val}}"{{#if disabled}} disabled{{/if}}{{#if selected}} selected{{/if}}>{{name}}</option>
	{{/each}}

	</select>
	{{#is wrapper true}}
		</div>
	{{/is}}
</div>