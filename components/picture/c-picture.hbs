---
component: picture
---

<picture class="c-picture{{#if pictureModifierClass}}--{{pictureModifierClass}}{{/if}} {{pictureClasses}}" data-css="c-picture">

	<!--[if IE 9]><audio><![endif]-->
	{{#if picture320}}
		<source srcset="{{assets}}/{{picture320}} 1x, {{assets}}/{{picture320_2x}} 2x" media="(max-width: 320px)"/>
	{{/if}}

	{{#if picture480}}
		<source srcset="{{assets}}/{{picture480}} 1x, {{assets}}/{{picture480_2x}} 2x" media="(max-width: 480px)"/>
	{{/if}}

	{{#if picture640}}
		<source srcset="{{assets}}/{{picture640}} 1x, {{assets}}/{{picture640_2x}} 2x" media="(max-width: 640px)"/>
	{{/if}}

	{{#if picture768}}
		<source srcset="{{assets}}/{{picture768}} 1x, {{assets}}/{{picture768_2x}} 2x" media="(max-width: 768px)"/>
	{{/if}}

	{{#if picture1024}}
		<source srcset="{{assets}}/{{picture1024}} 1x, {{assets}}/{{picture1024_2x}} 2x" media="(max-width: 1024px)"/>
	{{/if}}

	{{#if picture1025}}
		<source srcset="{{assets}}/{{picture1025}} 1x, {{assets}}/{{picture1025_2x}} 2x" media="(min-width: 1024px)"/>
	{{/if}}

	{{#if picture769}}
		<source srcset="{{assets}}/{{picture769}} 1x, {{assets}}/{{picture769_2x}} 2x" media="(min-width: 769px)"/>
	{{/if}}

	{{#if picture481}}
		<source srcset="{{assets}}/{{picture481}} 1x, {{assets}}/{{picture481_2x}} 2x" media="(min-width: 481px)"/>
	{{/if}}

	{{#if picture321}}
		<source srcset="{{assets}}/{{picture321}} 1x, {{assets}}/{{picture321_2x}} 2x" media="(min-width: 321px)"/>
	{{/if}}
	<!--[if IE 9]></audio><![endif]-->

	<img src="{{assets}}/{{pictureUrlStd}}" alt="{{pictureAlt}}"/>
</picture>