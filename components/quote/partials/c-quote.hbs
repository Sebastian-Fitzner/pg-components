---
component: quote
---
<div class="c-quote{{#if quoteContextClass}}--{{quoteContextClass}}{{else}}--default{{/if}}{{#if quoteClasses}} {{quoteClasses}}{{/if}}" data-css="c-quote">
	<blockquote class="quote__content">
		{{quoteContent}}
	</blockquote>
	{{#if quoteAuthor}}
		<cite class="quote__author">{{quoteAuthor}}</cite>
	{{/if}}
</div>
