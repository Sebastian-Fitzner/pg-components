---
component: figure
---

<figure {{#if figureId}}id="{{figureId}}" {{/if}}class="c-figure{{#if figureModifierClass}}--{{figureModifierClass}}{{/if}} {{figureClasses}}" data-css="c-figure">

	<div class="figure__wrapper">
		{{#if pictureUrlStd}}
			{{> c-picture}}
		{{else}}{{#if video}}
			{{> c-video}}
		{{/if}}{{/if}}
	</div>

	{{#if figureCaption}}
		<figcaption class="figure__caption {{figureCaptionClasses}}">
			{{> c-figure__caption figureCaption}}
		</figcaption>
	{{/if}}

</figure>